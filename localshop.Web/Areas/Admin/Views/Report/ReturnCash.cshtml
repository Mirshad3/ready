<div class="row">
    <div class="col-12">
        <div class="card-box overflow-auto">
            <table id="datatable" class="table table-striped table-bordered nowrap">
                <thead>
                    <tr>

                        <th>Date Range</th>
                        @*<th>Total</th>*@
                        <th>Sub Total</th>
                        <th>Deduction %</th>
                        <th>Deduction Amount</th>
                       
                        <th>Return Amount</th>
                        <th>Details</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr data-orderid="@o.StartDate">
                            <td>@o.StartDate.ToString("MM/dd/yyyy") - @o.EndDate.ToString("MM/dd/yyyy")</td>
                            @*<td>@o.Total</td>*@
                            <td>@o.SubTotal</td>
                            <td>@o.DetuctionPersontage</td>
                            <td>@o.Detuction</td>
                            
                            <td>@o.ReturnTotal</td>
                            <td><button>View</button></td>
                            
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div> <!-- end row -->
